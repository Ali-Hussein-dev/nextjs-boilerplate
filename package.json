{
  "name": "nextjs-boilerplate",
  "decription": "Boilerplate for Nextjs and Typescript",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
    "temp": "ls -la .git/hooks",
    "test": "jest",
    "test:w": "jest --watch tests/components/$1",
    "test:w-p": "jest --watch tests/pages/$1",
    "test-all": "npm-run-all -p check-types format lint test",
    "i": "npm i & npm update",
    "post:install": "npm dedupe",
    "clean": "rm -rf node_modules & rm package-lock.json & npm i"
  },
  "dependencies": {
    "@chakra-ui/react": "latest",
    "@emotion/react": "latest",
    "@emotion/styled": "latest",
    "@testing-library/jest-dom": "latest",
    "axios": "latest",
    "framer-motion": "latest",
    "next": "latest",
    "npm": "latest",
    "react": "latest",
    "react-awesome-reveal": "latest",
    "react-dom": "latest",
    "react-icons": "latest",
    "react-query": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@next/bundle-analyzer": "latest",
    "@tailwindcss/aspect-ratio": "latest",
    "@tailwindcss/forms": "latest",
    "@testing-library/react": "latest",
    "@testing-library/user-event": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/react": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "autoprefixer": "latest",
    "babel-jest": "latest",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-react": "latest",
    "husky": "latest",
    "jest": "latest",
    "jest-watch-typeahead": "latest",
    "lint-staged": "latest",
    "next-compose-plugins": "latest",
    "next-pwa": "latest",
    "npm-run-all": "latest",
    "postcss": "latest",
    "prettier": "latest",
    "react-test-renderer": "latest",
    "tailwind-heropatterns": "latest",
    "tailwindcss": "latest",
    "tailwindcss-debug-screens": "latest",
    "tailwindcss-scroll-snap": "latest",
    "typescript": "latest"
  },
  "husky": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "lint-staged": {
    "**/*.+(ts|js|tsx|json)": [
      "prettier --write"
    ],
    "*.+(js|ts|tsx)": "eslint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keyword": [
    "nextjs",
    "react",
    "tailwindcss",
    "tailwind",
    "chkakra",
    "chkakra-ui",
    "typescript",
    "boilerplate",
    "starter-kit",
    "starter",
    "jest",
    "eslint",
    "react-icons",
    "prettier"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ali-Hussein-dev/nextjs-boilerplate"
  },
  "volta": {
    "node": "16.1.0",
    "npm": "7.12.0"
  }
}
